# Database Configuration
MONGODB_URI=mongodb://localhost:27017/eduplatform
JWT_SECRET=your-secret-key-here
JWT_EXPIRE=30d

# Server Configuration
PORT=3000
NODE_ENV=development

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=/api/auth/google/callback

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Client URL (Frontend)
CLIENT_URL=http://localhost:3000

# AI Configuration
# OpenAI API Key (for advanced AI features)
OPENAI_API_KEY=your-openai-api-key-here

# Cohere API Key (alternative to OpenAI)
COHERE_API_KEY=your-cohere-api-key-here

# Gemini API Key
GEMINI_API_KEY=your-gemini-api-key

# Note: If you don't have AI API keys, the system will use demo responses
# To get OpenAI API key: https://platform.openai.com/api-keys
# To get Cohere API key: https://dashboard.cohere.ai/api-keys
# To get Google OAuth credentials: https://console.cloud.google.com/